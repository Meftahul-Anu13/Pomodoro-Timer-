        <Button fx:id="shortBreakButton" layoutX="164.0" layoutY="55.0" mnemonicParsing="false" onAction="#setShortBreak" text="Short Break" />
      <Button fx:id="pomodoroTimer" layoutX="53.0" layoutY="55.0" mnemonicParsing="false" onAction="#pomodoro" text="Pomodoro" />
    </children>
   <effect>
      <ColorAdjust />
   </effect>
</AnchorPane>
